#!/usr/bin/env bash

set -eo pipefail

apt-get update &&
apt-get install -y git &&
rm -rf /var/lib/apt/lists/*
cd /
rm -rf /app
git clone https://github.com/puppet-community/puppetboard.git /app
cd /app
git checkout 9fbd283
cat << EOF > settings.py
import os

PUPPETDB_HOST = os.environ.setdefault('PUPPETDB_HOST', 'puppetdb')
PUPPETDB_PORT = int(os.environ.setdefault('PUPPETDB_PORT', '8081'))
PUPPETDB_SSL_VERIFY = False
PUPPETDB_KEY = '/app/puppetboard.key'
PUPPETDB_CERT = '/app/puppetboard.crt'
EOF
